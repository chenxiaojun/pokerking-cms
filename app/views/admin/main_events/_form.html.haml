= semantic_form_for [:admin, @main_event] do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs do
    = f.input :name
    = f.input :logo, as: :attachment, required: true,
                     hint: '图片最大为2MB， 尺寸比例 576 X 288px',
                     image: proc { |o| o.logo_url.to_s }

    = f.input :begin_time
    = f.input :end_time
    = f.input :published
    ~ f.input :description
  = f.submit data: { disable_with: '请稍等...' }

:javascript
    $(function() {
        PkEditor.call($("#main_event_description"), $('form.main_event'));
    });


