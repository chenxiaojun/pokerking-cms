context.instance_eval do
  column(:id)
  column(:main_event)
  column(:title)
  column(:source)
  column(:image, sortable: false) { |info| img_link_to_show(info, info.image_url) }
  column(:published)
  column(:updated_at)
  column(:created_at)
  column(:hot) do |info|
    if info.hot?
      link_to '取消热门', unhot_admin_info_path(info), method: :post
    else
      link_to '上热门', hot_admin_info_path(info), method: :post
    end
  end
  actions
end


